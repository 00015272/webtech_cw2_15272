extends layout.pug

block content  
    h1.heading All Workers 
    if (workers.length)
        ul.list  
            each worker in workers
                li.list-item 
                    a(href="/" + worker.id)= worker.fullName 
                    .options 
                        a.edit(href="/edit/" + worker.id) edit
                        a.delete(href="/delete/" + worker.id) delete 
    else 
        p.message-box No data available